{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],

    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".ts",
                    ".js",
                    ".json"
                ]
            },
            "typescript": {}
        },
        "import/extensions": [
            ".js",
            ".ts"
        ]
    },
    "rules": {
        "indent": ["error", 4],
        "semi": [2, "never"],
        "object-curly-spacing": [2, "never"],
        "no-console": ["error", { "allow": ["error", "info"] }],
        "no-underscore-dangle": "off",
        "max-classes-per-file": "off",
        "import/prefer-default-export": "off",
        "no-unused-vars": "off",
        "no-shadow": "off",
        "@typescript-eslint/no-shadow": "warn",
        "max-len": ["warn", { "code": 200 }],
        "import/order": ["off"],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ]
    }
}
